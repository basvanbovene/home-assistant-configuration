- alias: 'Bas leaves home, notify pc ON'
  trigger:
    platform: zone
    entity_id: device_tracker.bas
    zone: zone.home
    event: leave
  condition:
    - condition: state
      entitiy_id: switch.game_pc
      state: 'on'
  action:
    - service: notify.bas
      data_template:
        title: "Game PC staat nog aan"
        message: "De status van Game PC is {{ switch.game_pc.state }}"
